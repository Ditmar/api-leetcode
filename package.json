{
  "name": "hex",
  "version": "1.0.0",
  "description": "Express API with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:up": "docker compose -f ./local-database/database.yaml up -d",
    "prisma:migrate": "npx prisma migrate dev --name init"
  },
  "keywords": [
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "6.0.0",
    "@types/config": "3.3.5",
    "@types/express": "5.0.5",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.10.0",
    "@types/pino": "7.0.5",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "prisma": "6.19.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "ajv": "8.17.1",
    "bcrypt": "6.0.0",
    "config": "4.1.1",
    "dotenv": "17.2.3",
    "express": "4.21.2",
    "jsonwebtoken": "9.0.2",
    "pino": "10.1.0",
    "pino-pretty": "13.1.2",
    "uuid": "13.0.0",
    "zod": "4.1.13"
  }
}
